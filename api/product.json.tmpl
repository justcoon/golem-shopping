{
  "id": "product",
  "version": "0.0.1",
  "routes": [
    {
      "method": "Get",
      "path": "/v1/product/{product-id}",
      "binding": {
        "componentId": {
          "componentId": "$PRODUCT_COMPONENT_ID",
          "version": $PRODUCT_COMPONENT_VERSION
        },
        "workerName": "${let id: str = request.path.product-id;\nid}",
        "idempotencyKey": null,
        "response": "${let result = golem:product/api.{get}();\nmatch result {  some(x) => {status: 200u64, body: x}, none => {status: 404u64, body: {message: \"not found\"}} } }",
        "idempotencyKeyInput": null
      }
    },
    {
      "method": "Post",
      "path": "/v1/product/{product-id}",
      "binding": {
        "componentId": {
          "componentId": "$PRODUCT_COMPONENT_ID",
          "version": $PRODUCT_COMPONENT_VERSION
        },
        "workerName": "${let id: str = request.path.product-id;\nid}",
        "idempotencyKey": null,
        "response": "${let name: str = request.body.name;\nlet description: str = request.body.description;\nlet tags: list<str> = request.body.tags;\ngolem:product/api.{initialize-product}(name, description, tags);\n{status: 200u64, body: {message: \"created\"}}}",
        "idempotencyKeyInput": null
      }
    }
  ],
  "draft": true
}